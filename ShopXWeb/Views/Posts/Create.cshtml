@model AddPostFormModel

@{
    ViewData["Title"] = "Add a product";
}


<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-8 col-sm-12 col-xl-6">
            <h2 class="heading-margin text-center">Add a product</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Gaming Mouse">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="50.00">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrencyTypeId"></label>
                    <select asp-for="CurrencyTypeId" class="form-control">
                        @foreach (var currencyType in Model.CurrencyTypes)
                        {
                            <option value="@currencyType.Id">@currencyType.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" placeholder="URL">
                    <span asp-validation-for="Image" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Something About Product"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Create" /> 
            </form>
        </div>
    </div>
</div>